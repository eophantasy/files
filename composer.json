{
    "name": "eophantasy/files",
    "description": "The package to work with files, directories and its content via true OOP classes.",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "dev",
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:eophantasy/types.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:eophantasy/io.git"
        }
    ],
    "autoload": {
        "psr-4": {
            "Eophantasy\\Files\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Eophantasy\\Files\\Test\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Ilya Sitnikov",
            "email": "sitnikovik@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "eophantasy/io": "dev-master",
        "eophantasy/types": "dev-main"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5"
    }
}
